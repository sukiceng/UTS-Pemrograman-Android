<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSummaryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/kembali"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Details"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semi_bold"
            android:paddingStart="100dp"/>
    </LinearLayout>


  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="190dp"
      android:layout_marginTop="50dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:background="@color/beige"
      app:cardCornerRadius="35dp"
      android:elevation="10dp">
    <ImageView
        android:id="@+id/getImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="130dp"
        android:paddingEnd="40dp"
        android:orientation="vertical">
      <TextView
          android:id="@+id/judul_ticket"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="judul"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold"/>
      <TextView
          android:id="@+id/detail_bioskop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="informasi bioskop"
          android:textColor="@color/black"
          android:fontFamily="@font/poppins_medium_italic"
          android:textSize="15sp"/>
        <TextView
          android:id="@+id/tanggal_pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
            android:text="tanggal pemesanan"
            android:textColor="@color/darker_grey"
            android:fontFamily="@font/poppins_regular"/>
      </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:layout_marginTop="240dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      app:cardCornerRadius="35dp"
      android:elevation="20dp">
    <TextView
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
      android:layout_marginStart="20dp"
      android:text="Order Number"
      android:textSize="20sp"
      android:fontFamily="@font/poppins_semi_bold"
      android:textColor="@color/darker_grey"/>
    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        android:text="1234567890"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:text="Seat Type"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/darker_grey"/>
<TextView
          android:id="@+id/seat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:layout_marginStart="20dp"
            android:text="Regular"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:text="Payment Method"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/darker_grey"/>
    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginStart="20dp"
        android:text="Gopay"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginStart="20dp"
        android:text="Ticket Price"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/darker_grey"/>
    <TextView
        android:id="@+id/harga_Ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginStart="20dp"
        android:text="Rp 35.000"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"/>
    <TextView
      android:id="@+id/biaya_jasa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:layout_marginTop="300dp" android:layout_marginStart="20dp" android:text="Service Fee" android:textSize="20sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/darker_grey"/>
    <TextView
        android:id="@+id/jumlah_biaya_jasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_marginStart="20dp"
        android:text="Rp 2.000"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="370dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:background="@color/almost_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginStart="20dp"
        android:text="Total Payment"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/darker_grey"/>
    <TextView
        android:id="@+id/total_payment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginStart="20dp"
        android:text="Rp 37.000"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/black"/>


  </androidx.cardview.widget.CardView>
</RelativeLayout>
